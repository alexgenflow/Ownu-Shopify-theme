
<section class="slider_trainer">
  <div class="page-width trainer">
  <div class="container inner_cont">
    <div class="row">
      <div class="col-lg-12">
        		<h2 class="main_head">{{ section.settings.main_heading }}</h2>
        <div class="slider_para">
          <p>{{ section.settings.text_below_heading }}</p>
        </div>
      		<div class="referrel-carousel owl-theme {{ section.settings.custom-class }}">
              {% for block in section.blocks %}
              <a href="{{ block.settings.link }}">
                <div class="item_half">
                  <div class="Item-text">
                    <h2>{{ block.settings.heading }}</h2>
                    <p>{{ block.settings.para }}</p>
                    {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                      {%- capture ariaLabel -%}
                        {{- block.settings.button_label -}}
                        {%- if block.settings.button_link.type == 'frontpage_link' -%}
                          : {{ 'homepage.general.title' | t -}}
                        {%- elsif block.settings.button_link.type == 'catalog_link' -%}
                          : {{ 'collections.catalog.title' | t -}}
                        {%- elsif block.settings.button_link.object.title -%}
                          : {{ block.settings.button_link.object.title -}}
                        {%- endif -%}
                      {%- endcapture -%}

                      <a href="{{ block.settings.button_link }}"
                        class="btn"
                        aria-label="{{ ariaLabel }}">
                        {{- block.settings.button_label | escape -}}
                      </a>
                    {% endif %}
                  </div>
                  <img src="{{ block.settings.slider_image  | img_url: 'master' }}">
                  
              	</div>
                </a>
              {% endfor %}
			</div>
      </div>
    </div>
  </div>
 </div>   
</section>
  

